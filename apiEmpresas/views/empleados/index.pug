extends ../layout
block content
    h2.mt-1 Lista de empleados
    table.table
        thead
            tr
                th Nombre
                th DNI 
                th Sexo
                th Fecha_nacimiento
                th Fecha_incorporacion
                th Salario
                th Cargo
                th Departamento
                th Jefe
                th Acciones
        tbody
            each empleado in empleados
                tr
                    td=empleado.nombre
                    td=empleado.dni
                    td=empleado.sexo
                    td=empleado.fecha_nacimiento
                    td=empleado.fecha_incorporacion
                    td=empleado.salario
                    td=empleado.cargo
                    td=empleado.fk_departamento
                    td=empleado.jefe_id
                    td 
                        a.btn.btn-primary.ml-1(href="/empleados/edit/"+empleado.id) Editar                   
                        a.btn.btn-warning.ml-1(href="/empleados/delete/"+empleado.id) Borrar
    a.btn.btn-info(href="/empleados/new") Agregar nuevo empleado